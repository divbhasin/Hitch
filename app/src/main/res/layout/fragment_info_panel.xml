<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="500dp"
        android:paddingRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
    <ImageButton
        android:id="@+id/test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/test3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/test1"

        android:id="@+id/test2"
        android:src="@drawable/test1"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@+id/test1"
        android:id="@+id/test3"
        android:src="@drawable/test2"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_below="@+id/test2"
        android:src="@drawable/test3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test5"
        android:layout_below="@id/test3"
        android:background="@android:color/transparent"
        android:src="@drawable/test4" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="500dp">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test6"
        android:layout_below="@+id/test4"
        android:background="@android:color/transparent"
        android:src="@drawable/test5" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test7"
        android:layout_below="@+id/test5"
        android:background="@android:color/transparent"
        android:src="@drawable/test6" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test8"
        android:layout_below="@+id/test6"
        android:background="@android:color/transparent"
        android:src="@drawable/test7" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test9"
        android:background="@android:color/transparent"
        android:layout_below="@+id/test7"
        android:src="@drawable/test8" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test10"
        android:layout_below="@+id/test8"
        android:background="@android:color/transparent"
        android:src="@drawable/test9" />
    </LinearLayout>

</RelativeLayout>